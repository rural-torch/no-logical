/* pages/search/index.wxss */
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 5px;
  background: rgb(247, 247, 248);
  border: 1rpx solid rgb(247, 247, 248);
}
.weui-search-bar__box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 12px;
}
.history_title{
  display: flex;
  font-size: small;
  margin-left: 30px;
  margin-top: 10px;
  font-weight: 600;
}
.icon-box-img{
  margin-left: 5px;
  margin-top: 3px;
}
.ebox{
  background-color: rgb(247, 247, 248);
  border-radius: 30px;
  overflow: hidden; 
  text-overflow: ellipsis; 
  white-space: nowrap;
  font-size: 13px;
  text-align: center;
  padding: 9px;
  margin-left: 10px;
  margin-top: 15px;
}
.history_content{
  display: flex;
  flex-wrap: wrap;
  margin-top: 5px;
  margin-left: 10px;
  font-weight: 580;
}