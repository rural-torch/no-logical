.cell {
    display: flex;
    justify-content: space-between;
    position: relative;
    box-sizing: border-box;
    width: 750rpx;
    height: 100rpx;
    padding: 0 40rpx;
    font-size: 32rpx;
    line-height: 100rpx;
}

.cell:first-child::before {
    display: none;
}

.cell::before {
    content: '';
    display: block;
    position: absolute;
    z-index: 99;
    top: 0;
    left: 40rpx;
    width: 100%;
    height: 1px;
    transform-origin: 0 0;
    transform: scaleY(0.5);
    background-color: #e5e5e5;
}

.cell:active {
    background-color: #fafafa;
}

.cell-ft{
    color: #bbb;
    display:flex;
 height: 100%;
 justify-content: center;
 align-items:center;
}
.cell-ft image { 
    width:96rpx;
    height:96rpx;
    }
.cell-access .cell-ft {
    padding-right: 13px;
    position: relative;
}

.cell-access .cell-ft::after {
    content: '';
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;
}
page::after {
    content: '';
    display: block;
    width: 100%;
    height: 1px;
}

