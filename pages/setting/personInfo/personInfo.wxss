page {
    background: #f4f4f4;
}

.cells {
    position: relative;
    margin: 20rpx 0;
    background: #fff;
    overflow: hidden;
}
.cell3 {
    position: relative;
    margin: 20rpx 0;
    background: #fff;
    overflow: hidden;
    height: 400rpx;
}
.cell3::before, .cell3::after {
    content: '';
    display: block;
    position: absolute;
    z-index: 99;
    left: 0;
    width: 100%;
    height: 1px;
    transform-origin: 0 0;
    transform: scaleY(0.5);
    background-color: #e5e5e5;
}

.cell3::before {
    top: 0;
}

.cell3::after {
    bottom: 0;
}
.cells::before, .cells::after {
    content: '';
