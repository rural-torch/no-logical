.loadMore {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.weui-search-bar {
  position: relative;
  padding: 16rpx 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 20rpx;
  top: 14rpx;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 10rpx;
  background: rgb(247, 247, 248);
  border: 1rpx solid rgb(247, 247, 248);
}
.weui-search-bar__box {
  position: relative;
  padding-left: 60rpx;
  padding-right: 60rpx;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.weui-search-bar__input {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 24rpx;
}

.navbar{ 
  flex: none; 
  display: flex; 
  background: #fff; 
  font-family: "微软雅黑"、Arial、Verdana、"Times New Roman";
  font-size:14px;
  font-weight: 550;

 } 
 .navbar .item{ 
  position: relative; 
  flex: auto; 
  text-align: center; 
  line-height: 80rpx; 
 } 
 .navbar .item.active{ 
  color: rgb(249, 184, 111); 
 } 
 .navbar .item.active:after{ 
  content: ""; 
  display: block; 
  position: absolute; 
  bottom: 0; 
  left: 0; 
  right: 0; 
  height: 6rpx; 
  background:rgb(249, 184, 111); 
  font-weight: 800;
 }



