<view >
  <view>
    <view>
      <view class="weui-search-bar">
        <view class="weui-search-bar__form">
          <!-- 搜索框 -->
          <view class="weui-search-bar__box">
            <icon class="weui-icon-search_in-box" type="search" size="20"></icon>
            <input bindtap="search" type="text"
              class="weui-search-bar__input" placeholder="大家都在搜：家乡美食" />
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="navbar">
    <text wx:for="{{navbar}}" data-idx="{{index}}" class="item {{currentTab==index ? 'active' : ''}}" wx:key="unique"
      bindtap="navbarTap">{{item}}</text>
  </view>
  <!-- 选中创作时出现的页面 -->
  <view class="main">
    <view class="column-left" wx:for-item="pics">
      <view wx:for="{{columnsleft[currentTab]}}" class="column_item" wx:for-item="pics" wx:key='index' wx:for-index="bindex">
        <image wx:if="{{pics.isimg==1}}" catchtap="show" src="{{pics.pic}}" class="column_pic" mode="widthFix" data-bindex='{{bindex}}'  data-id="{{pics.topicid}}"
          id="{{item.index}}"></image>
          <video wx:if="{{pics.isimg==0}}" catchtap="show" src="{{pics.pic}}" class="column_pic" mode="widthFix"  object-fit="cover" poster="{{attr.attributeJson.screenShotUrl}}" bindended='end1' autoplay="{{attr.attributeJson.autoPlayBl}}"  data-id="{{pics.topicid}}"
          id="{{item.index}}" id='video{{attr.moduleId}}'></video>
        <view class="list-loc" style="opacity:{{0.6}}">
          <view class="loc_text">{{pics.loctext}}</view>
          <image src="https://duing.site/saveFiles/images/180.png" class="loc11"></image>
        </view>
        <view class="list-main">
          <view class="list-text">
            {{pics.content}}
          </view>
          <view class="list-time" style="color:{{timeColor}}">{{pics.time}}</view>
          <view class="list-user">
            <image class="motou" src="{{pics.avatarUrl}}"></image>
            <text class="authname">{{pics.nickname}}</text>
          </view>
          <view class="list-love">
            <image bindtap='addlove' data-id="{{pics.topicid}}" wx:if="{{pics.islike==0}}" src="https://duing.site/saveFiles/images/like.png"
              class="love-img"></image>
            <view style="display:flex" wx:if="{{pics.islike!=0}}">
              <image bindtap='addlove' data-id="{{pics.topicid}}" src="https://duing.site/saveFiles/images/like1.png" class="love-img"></image>
              <view style="margin-top:5rpx;margin-left:5rpx;">{{pics.islike}}</view>
            </view>
          </view>
        </view>
    </view>
    </view>
    <view class="column-right" wx:for-item="pics">
      <view wx:for="{{columnsright[currentTab]}}" class="column_item" wx:for-item="pics" wx:key='index' wx:for-index="bindex1">
        <image wx:if="{{pics.isimg==1}}" catchtap="show" src="{{pics.pic}}" class="column_pic" mode="widthFix" data-bindex='{{bindex}}'  data-id="{{pics.topicid}}"
          id="{{item.index}}"></image>
          <video wx:if="{{pics.isimg==0}}" catchtap="show" src="{{pics.pic}}" class="column_pic" mode="widthFix" data-bindex='{{bindex}}'  data-id="{{pics.topicid}}"
          id="{{item.index}}"></video>
        <view class="list-loc" style="opacity:{{0.6}}">
          <view class="loc_text">{{pics.loctext}}</view>
          <image src="https://duing.site/saveFiles/images/180.png" class="loc11"></image>
        </view>
        <view class="list-main">
          <view class="list-text">
            {{pics.content}}
          </view>
          <view class="list-time" style="color:{{timeColor}}">{{pics.time}}</view>
          <view class="list-user">
            <image class="motou" src="{{pics.avatarUrl}}"></image>
            <text class="authname">{{pics.nickname}}</text>
          </view>
          <view class="list-love">
            <image bindtap='addlove' data-id="{{pics.topicid}}" wx:if="{{pics.islike==0}}" src="https://duing.site/saveFiles/images/like.png"
              class="love-img"></image>
            <view style="display:flex" wx:if="{{pics.islike!=0}}">
              <image bindtap='addlove' data-id="{{pics.topicid}}" src="https://duing.site/saveFiles/images/like1.png" class="love-img"></image>
              <view style="margin-top:5rpx;margin-left:5rpx;">{{pics.islike}}</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="hide">
    <image wx:for="{{temppics}}" src="{{item.pic}}" bindload="loadPic" binderror="loadPicError"
      data-index="{{index}}" />
  </view>
  <view class="over" bindtap='adddetial'>
    <image class="overtext1" src="https://duing.site/saveFiles/images/people.png">
    </image>
    <view class="overtext3">求助</view>
  </view>
  <view class="over1" bindtap='adddetial1'>
    <image class="overtext" src="https://duing.site/saveFiles/images/fabiao.png" mode="widthFix">
    </image>
    <view class="overtext3">发表</view>
  </view>
</view>